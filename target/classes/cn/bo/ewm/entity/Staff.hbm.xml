<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.bo.ewm.entity.Staff" table="e_staff" schema="ewm">
        <id name="oid">
            <column name="oid" sql-type="int(10) unsigned"/>
            <generator class="native"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="username">
            <column name="username" sql-type="varchar(255)" not-null="true" unique="true"/>
        </property>

        <property name="password">
            <column name="password" sql-type="varchar(255)" not-null="true"/>
        </property>



        <set name="equipments" table="e_staff_equipment" lazy="true" cascade="save-update">
            <key column="s_id"/>
            <many-to-many class="cn.bo.ewm.entity.Equipment" column="e_id"/>
        </set>

        <set name="records" table="e_record" lazy="true">
            <key column="staff_id"></key>
            <one-to-many class="cn.bo.ewm.entity.Record"/>
        </set>

    </class>
</hibernate-mapping>